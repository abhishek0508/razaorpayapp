
<h1>Listing Books</h1>
 <head><meta name="viewport" content="width=device-width"></head>
<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Description</th>
      <th>Price</th>

      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.topic %></td>
        <td><%= course.description %></td>
        <td><%= course.price %></td>
        <td><%= link_to "Pay", courses_path(id: course.id) %></td>
        </tr>
    <% end %>
  </tbody>
</table>

